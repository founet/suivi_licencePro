    <body >
        {% block body %}
                <!-- Start: page-top-outer -->
<div id="page-top-outer">    

<!-- Start: page-top -->
<div id="page-top">

	<!-- start logo -->
	<div id="logo">
	<a href="{{path('liste_etudiants')}}"><img src={{ asset('bundles/iutancienetudiant/images/logoRVB_IUTDescartes.jpg') }} width="156" height="80" alt="" /></a>
	</div>
	<!-- end logo -->
	
	<!--  start top-search -->
	<div id="top-search">
            <form class="form-inline" role="form" action="{{path('rechercheEmail')}}" method="POST">
                <div class="form-group ">
                     <input type="search" class="form-control"  name="email" id="search" placeholder="Recherche par email">
                </div>


                <button type="submit" class="btn btn-default">Rechercher</button>
              </form>
                <p><a href="{{path('rechercher')}}" style="color:white;margin-top: 5px;font-weight: bold;float: left">Recherche multicritères</a></p>
        </div>
 	<!--  end top-search -->
 	<div class="clear"></div>

</div>
<!-- End: page-top -->

</div>
<!-- End: page-top-outer -->
	

 
<!--  start nav-outer-repeat................................................................................................. START -->
<div class="nav-outer-repeat"> 
<!--  start nav-outer -->
<div class="nav-outer"> 

        <!-- start nav-right -->
        
            <ul class="login">
                 <li style="text-transform: uppercase">{{app.user.username}}</li>

                 <li> |  <a href="{{path('fos_user_security_logout')}}"><b>Déconnexion</b></a></li>
            </ul>
      
        <!-- end nav-right -->


        <!--  start nav -->
        <div class="nav">
            <div class="table">
