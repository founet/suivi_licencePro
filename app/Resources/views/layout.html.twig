                    <li><a href="{{path('liste_etudiants_mail')}}"><b>Envoi Email Auto</b></a></li>

                    <li class="dropdown">
                        <a href="{{path('iut_user_homepage')}}" class="dropdown-toggle" data-toggle="dropdown" id="admin"><b>Admin</b></a>
                        
                    
                    </li>

                    <li><a href="{{path('aide')}}"><b>Aide</b></a></li>
                    
                </ul>

                <div class="clear"></div>
            </div>
