</div>
<div class="clear"></div>
<!--  start nav-outer -->
</div>
<!--  start nav-outer-repeat................................................... END -->



<div id="content-outer">
<!-- start content -->
    <div id="content">
        {% block content %}{% endblock %}
    </div>
</div>


<!-- start footer -->         
<div id="footer">
	<!--  start footer-left -->
	<div id="footer-left">
	Admin Licence Pro &copy; Copyright Université Paris Decartes.  All rights reserved.</div>
