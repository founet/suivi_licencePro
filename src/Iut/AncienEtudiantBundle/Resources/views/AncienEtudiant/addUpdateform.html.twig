
    <div class="row container">
            <div>
                <h3><leqend>  Formulaire Etudiant  </leqend></h3>
            </div>
            <form class="form-horizontal" role="form" action="{{action}}" method="POST" id="etudiant">
               
         
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="nom" class="col-lg-2 control-label">Nom</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="nom" name="nom" data-validation="required"  data-validation-error-msg="Champ Nom obligatoire" value="{%if etudiant is defined%}{{etudiant.nom}}{% endif %}" />

                        </div>
                    </div>
                </div>
                
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="prenom" class="col-lg-2 control-label">Pr√©nom</label>
                        <div class="col-lg-10">
                            
                            <input type="text" class="form-control" id="prenom" name="prenom" data-validation-error-msg="Champ Prenom obligatoire"data-validation="required" value="{%if etudiant is defined%}{{etudiant.prenom}}{% endif %}"/>

                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email" class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                             <input type="email" class="form-control" id="email" name="email" data-validation-error-msg="Adresse email invalide" data-validation="email" value="{%if etudiant is defined %}{{etudiant.email}}{% endif %}"/>
                            <p class="email_error">{{email_error}}</p>
                           
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="promo1" class="col-lg-2 control-label">Promotion</label>
                        <div class="col-lg-10">
                            <select name="promotion" id="promo1" class="form-control">
                  
                      {% for promotion in promotions %}
                    
                          <option value="{{promotion.id}}" {%if etudiant is defined %}{% if promotion.id==etudiant.promotion.id%}selected{%endif%}{% endif %}>{{promotion.annee|date('Y')}}</option>
                       {%endfor%}
                    
                </select>
                           
                        </div>
                    </div>
                </div>
                
                  <div class="col-md-6">
                        <div class='pull-right'>
                        <button type="submit" class="btn btn-primary form-control"><span class="glyphicon glyphicon-ok"></span>
                        Valider
                        </button>
                      </div>
                      
                </div>
          
            </form>
            
              
            
             
     </div>
<script>
                
                var myLanguage = {
                 errorTitle : 'Formulaire non valide!',
                };
                $.validate({
                    form : '#etudiant',
                    language:myLanguage,
                    validateOnBlur : false, // disable validation when input looses focus
                    errorMessagePosition : 'top', // Instead of 'element' which is default
                    scrollToTopOnError : false // Set this property to true if you have a long form
                    
    
            });
               
              </script>